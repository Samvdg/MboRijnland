<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navigation navbar navbar-expand-lg navbar-light bg-light">
            <div class="justify-content-end collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="justify-content-end navbar-nav">
                    {% if app.user %}
                        <li class="justify-self-start nav-item active">
                            <a class="nav-link" href="/user/{{ app.user.id }}">Profile</a>
                        </li>
                        <li class="justify-self-start nav-item active">
                            <a class="nav-link" href="/log">Alle logs</a>
                        </li>
                    {% endif %}
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    {% if is_granted("ROLE_USER") %}
                        <li class="'nav-item active">
                            <a class="nav-link" href="/log">Jouw logs</a>
                        </li>
                    {% endif %}
                    {% if is_granted("ROLE_ADMIN") %}
                        <li class="'nav-item active">
                            <a class="nav-link" href="/truck">Trucks</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/user">Users</a>
                        </li>
                    {% endif %}
                    <li class="nav-item active">
                        {% if app.user %}
                            <a class="nav-link" href="{{ path('fos_user_security_logout') }}">Logout {{ app.user }}</a>
                        {% else %}
                            <a class="nav-link" href="{{ path('fos_user_security_login') }}">Login</a>
                        {% endif %}
                    </li>

                </ul>
            </div>
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>
